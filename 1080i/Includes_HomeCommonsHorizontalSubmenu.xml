            <posy>0</posy>
            <width>180</width>
            <height>55</height>
            <align>center</align>
            <aligny>center</aligny>
            <font>Font-Condensed-S30</font>
            <textcolor>ee000000</textcolor>
            <label>$INFO[ListItem.label]</label>
